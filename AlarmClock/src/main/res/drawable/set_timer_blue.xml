<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:exitFadeDuration="200">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#1e2033" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#252d53"/>
            <corners android:radius="10dp" />
            <gradient android:angle="135" android:type="linear" android:startColor="#0e121d" android:endColor="#213a93"/>
        </shape>
    </item>
</selector>
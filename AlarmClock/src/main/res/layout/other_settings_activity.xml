<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/other_settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#70000000"
        android:minHeight="?android:attr/actionBarSize"
        android:theme="@style/AppBaseTheme"
        app:navigationIcon="@drawable/ic_action_back"
        app:title="@string/preference_category_other" />

    <fragment
        android:id="@+id/settings_fragment"
        android:name="com.bytezap.wobble.preference.OtherSettingsActivity$SettingsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/other_settings_toolbar"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <com.bytezap.wobble.customviews.CropImage
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        custom:backgroundColor="@color/black"
        custom:cropMode="ratio_3_4"
        custom:frameColor="@color/white"
        custom:frameStrokeWeight="3dp"
        custom:guideColor="#E3F2FD"
        custom:guideShowMode="show_always"
        custom:guideStrokeWeight="1dp"
        custom:handleColor="@color/white"
        custom:handleShowMode="show_always"
        custom:handlewidth="20dp"
        custom:imgSrc="@mipmap/ic_launcher"
        custom:minFrameSize="70dp"
        custom:overlayColor="#aa1c1c1c"
        custom:touchPadding="5dp"
        custom:initialFrameScale="1.0"/>

    <LinearLayout
        android:id="@+id/crop_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/crop_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/crop_cancel_border"
            android:text="@string/cancel"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/crop_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/stopwatch_white_bg"
            android:text="@string/done"
            android:textAllCaps="false"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragment_mathLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#40000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center"
                android:maxLines="1"
                android:padding="7dp"
                android:text="@string/default_math_question"
                android:textColor="@color/white"
                android:textSize="@dimen/mathgame_question_text"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center"
                android:maxLines="1"
                android:padding="7dp"
                android:text="@string/equal_sign"
                android:textColor="#fff"
                android:textSize="@dimen/mathgame_question_text"
                android:textStyle="bold"
                android:typeface="serif" />

            <LinearLayout
                android:id="@+id/answer_layout"
                android:layout_width="@dimen/edit_math_width"
                android:layout_height="wrap_content"
                android:background="@drawable/answer_math">

                <TextView
                    android:id="@+id/edit_math_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@null"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLength="7"
                    android:textSize="@dimen/mathgame_question_text"/>

                <ImageButton
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/link_bg"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:contentDescription="@string/clear_previous"
                    android:src="@drawable/ic_action_unchecked"
                    android:tint="@color/white" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="@dimen/math_border"
            android:layout_height="2dp"
            android:background="#70ffffff"
            android:layout_margin="@dimen/math_number_margin"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:layout_width="@dimen/math_key_diameter"
                android:layout_height="@dimen/math_key_diameter"
                android:layout_margin="@dimen/math_number_margin"
                android:background="@drawable/math_number_bg"
                android:elevation="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/seven"
                android:textColor="@color/white"
                android:textSize="@dimen/mathgame_question_text" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="@dimen/math_key_diameter"
                android:layout_height="@dimen/math_key_diameter"
                android:layout_margin="@dimen/math_number_margin"
                android:background="@drawable/math_number_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/eight"
                android:textColor="@color/white"
                android:textSize="@dimen/mathgame_question_text" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="@dimen/math_key_diameter"
                android:layout_height="@dimen/math_key_diameter"
                android:layout_margin="@dimen/math_number_margin"
                android:background="@drawable/math_number_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/nine"
                android:textColor="@color/white"
                android:textSize="@dimen/mathgame_question_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:layout_width="@dimen/math_key_diameter"
                android:layout_height="@dimen/math_key_diameter"
                android:layout_margin="@dimen/math_number_margin"
                android:background="@drawable/math_number_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/four"
                android:textColor="@color/white"
                android:textSize="@dimen/mathgame_question_text"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="@dimen/math_key_diameter"
                android:layout_height="@dimen/math_key_diameter"
                android:layout_margin="@dimen/math_number_margin"
                android:background="@drawable/math_number_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/five"
                android:textColor="@color/white"
                android:textSize="@dimen/mathgame_question_text" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="@dimen/math_key_diameter"
                android:layout_height="@dimen/math_key_diameter"
                android:layout_margin="@dimen/math_number_margin"
                android:background="@drawable/math_number_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/six"
                android:textColor="@color/white"
                android:textSize="@dimen/mathgame_question_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="@dimen/math_key_diameter"
                android:layout_height="@dimen/math_key_diameter"
                android:layout_margin="@dimen/math_number_margin"
                android:background="@drawable/math_number_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/one"
                android:textColor="@color/white"
                android:textSize="@dimen/mathgame_question_text" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="@dimen/math_key_diameter"
                android:layout_height="@dimen/math_key_diameter"
                android:layout_margin="@dimen/math_number_margin"
                android:background="@drawable/math_number_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/two"
                android:textColor="@color/white"
                android:textSize="@dimen/mathgame_question_text"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="@dimen/math_key_diameter"
                android:layout_height="@dimen/math_key_diameter"
                android:layout_margin="@dimen/math_number_margin"
                android:background="@drawable/math_number_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/three"
                android:textColor="@color/white"
                android:textSize="@dimen/mathgame_question_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/go_back"
                android:layout_width="@dimen/math_key_diameter"
                android:layout_height="@dimen/math_key_diameter"
                android:layout_margin="@dimen/math_number_margin"
                android:background="@drawable/math_button_bg"
                android:contentDescription="@string/math_back_button_desc"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_action_back"
                android:tint="@color/white" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="@dimen/math_key_diameter"
                android:layout_height="@dimen/math_key_diameter"
                android:layout_margin="@dimen/math_number_margin"
                android:background="@drawable/math_number_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/zero"
                android:textColor="@color/white"
                android:textSize="@dimen/mathgame_question_text" />

            <ImageButton
                android:id="@+id/enter"
                android:layout_width="@dimen/math_key_diameter"
                android:layout_height="@dimen/math_key_diameter"
                android:background="@drawable/math_button_bg"
                android:layout_margin="@dimen/math_number_margin"
                android:contentDescription="@string/math_done_button_desc"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_action_checked"
                android:tint="#F5F5F5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/problem_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/problems_left"/>

            <Button
                android:id="@+id/problem_skip"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/skip_button_height"
                android:text="@string/skip"
                android:layout_marginStart="10dp"
                android:textColor="@drawable/textcolor_bg_reversed"
                android:textAllCaps="false"
                android:background="@drawable/skip_button_bg"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/math_wrong_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/toast_bg"
        android:padding="10dp"
        android:textColor="@color/white"
        android:layout_gravity="bottom|center"
        android:gravity="bottom|center"
        android:visibility="gone"
        android:layout_marginBottom="50dp"
        android:text="@string/math_toast_wrong_answer"
        android:textAppearance="?android:textAppearanceMedium"/>

</FrameLayout>
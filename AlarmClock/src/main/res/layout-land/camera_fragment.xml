<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/cam_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:id="@+id/cam_control"
        android:layout_height="match_parent"
        android:layout_width="112dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#70000000"
        android:layout_alignParentRight="true">

        <ImageButton
            android:id="@+id/capture_cam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_camera_click"
            android:layout_centerInParent="true"
            android:background="@drawable/circular_transparent"
            android:contentDescription="@null" />

        <ImageButton
            android:id="@+id/flash_cam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_flash_off"
            android:background="@color/transparent"
            android:contentDescription="@null" />

        <ImageButton
            android:id="@+id/flip_cam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_refresh"
            android:background="@color/transparent"
            android:contentDescription="@null" />

    </RelativeLayout>

</RelativeLayout>